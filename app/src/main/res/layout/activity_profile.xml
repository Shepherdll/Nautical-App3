<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:theme="@style/AppTheme2"
    android:background="@drawable/profile_background">


    <include
        android:id="@+id/include3"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/logout_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/_bio"
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="@string/bio"
        android:background="@drawable/text_background"
        android:layout_above="@+id/_languages"
        android:layout_alignStart="@+id/_languages" />

    <TextView
        android:id="@+id/_languages"
        android:layout_width="325dp"
        android:layout_height="20dp"
        android:layout_above="@+id/_intrests"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Langhuages Known" />

    <TextView
        android:id="@+id/_intrests"
        android:layout_width="325dp"
        android:layout_height="20dp"
        android:layout_above="@+id/logout_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"

        android:background="@drawable/text_background"
        android:ems="10"
        android:text="Intrests" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimagebutton2"
        android:layout_width="187dp"
        android:layout_height="175dp"
        android:src="@drawable/dummy"
        android:layout_marginTop="14dp"

        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/logout_btn2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/include3"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/dots_icon" />


</RelativeLayout>
