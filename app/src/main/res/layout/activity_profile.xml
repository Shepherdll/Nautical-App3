<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:theme="@style/AppTheme2"
    android:background="@drawable/ic_action_settings">


<include
    layout="@layout/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/include3" />


    <Button
        android:id="@+id/logout_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_below="@+id/include3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/_bio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Bio"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/_languages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/_languages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Langhuages Known"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/_intrests"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/_intrests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Intrests"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/logout_btn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimagebutton2"
        android:layout_width="187dp"
        android:layout_height="175dp"
        android:layout_above="@+id/_bio"
        android:layout_toEndOf="@+id/logout_btn2"
        android:layout_toRightOf="@+id/logout_btn2"
        android:src="@drawable/dummy"></de.hdodenhof.circleimageview.CircleImageView>


</RelativeLayout>
